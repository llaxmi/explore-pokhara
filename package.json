{
  "name": "Wander-pokhara",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:css": "postcss public/styles/tailwind.css -o public/styles/main.css",
    "watch:css": "postcss public/styles/tailwind.css -o public/styles/main.css --watch",
    "start": "node ./bin/www",
    "dev": "concurrently \"npm run watch:css\" \"nodemon ./bin/www\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^8.5.1",
    "morgan": "~1.9.1",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "postcss-cli": "^11.0.0"
  }
}
